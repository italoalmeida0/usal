{
  "name": "usal-monorepo",
  "version": "1.3.0",
  "private": true,
  "type": "module",
  "description": "Ultimate Scroll Animation Library - Lightweight, powerful, wonderfully simple âœ¨",
  "homepage": "https://usal.dev/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/italoalmeida0/usal.git"
  },
  "bugs": {
    "url": "https://github.com/italoalmeida0/usal/issues"
  },
  "author": "Italo Almeida",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "packages": {
    "react": {
      "dependencies": {
        "react": [
          ">=16.8.0",
          false
        ]
      },
      "jsx": true,
      "usage": {
        "color": "grey",
        "pseudonym": [
          "Next.js"
        ],
        "file": "index.js/layout.ts",
        "import": "import { USALProvider } from '@usal/react';",
        "start": "<USALProvider>{children}</USALProvider>",
        "prop": "data-usal=\"VALUES\""
      }
    },
    "solid": {
      "dependencies": {
        "solid-js": [
          ">=1.0.0",
          false
        ]
      },
      "usage": {
        "color": "blue",
        "pseudonym": [
          "SolidStart"
        ],
        "file": "app.tsx",
        "import": "import { USALProvider } from '@usal/solid';",
        "start": "<USALProvider>{props.children}</USALProvider>",
        "prop": "data-usal=\"VALUES\""
      }
    },
    "svelte": {
      "dependencies": {
        "svelte": [
          ">=3.0.0",
          false
        ]
      },
      "usage": {
        "color": "orange",
        "pseudonym": [
          "SvelteKit"
        ],
        "file": "App.svelte/+layout.svelte",
        "import": "import { usal } from '@usal/svelte';",
        "start": "// USAL auto-initializes globally",
        "prop": "use:usal={'VALUES'}"
      }
    },
    "vue": {
      "dependencies": {
        "vue": [
          ">=3.0.0",
          false
        ],
        "@nuxt/kit": [
          ">=3.0.0",
          true
        ]
      },
      "plugins": [
        "nuxt",
        "nuxt-plugin"
      ],
      "usage": {
        "color": "green",
        "pseudonym": [
          "Nuxt"
        ],
        "file": "nuxt.config.ts",
        "import": "import { USALPlugin } from '@usal/vue';",
        "start": "createApp(App).use(USALPlugin).mount('#app');\n//for Nuxt\nexport default defineNuxtConfig({\nmodules: ['@usal/vue/nuxt']\n//...",
        "prop": "v-usal=\"'VALUES'\""
      }
    },
    "lit": {
      "dependencies": {
        "lit": [
          ">=2.0.0",
          false
        ]
      },
      "usage": {
        "color": "cyan",
        "pseudonym": [],
        "file": "main.ts",
        "import": "import { usal } from '@usal/lit';",
        "start": "// USAL auto-initializes globally",
        "prop": "${usal('VALUES')}"
      }
    },
    "angular": {
      "format": "angular",
      "dependencies": {
        "@angular/core": [
          ">=12.0.0",
          false
        ],
        "@angular/common": [
          ">=12.0.0",
          false
        ]
      },
      "usage": {
        "color": "red",
        "pseudonym": [],
        "file": "app.component.ts",
        "import": "import { USALModule } from '@usal/angular';",
        "start": "@Component({imports: [USALModule]})\nexport class AppComponent",
        "prop": "usal=\"VALUES\""
      }
    }
  },
  "scripts": {
    "dev": "node scripts/build.js --watch --skip-angular",
    "dev:with-angular": "node scripts/build.js --watch",
    "build": "npm run lint:fix && node scripts/build.js",
    "release:canary": "node scripts/publish.js --canary",
    "release:canary:dry": "node scripts/publish.js --canary --dry-run",
    "release:beta": "node scripts/publish.js --beta",
    "release:beta:dry": "node scripts/publish.js --beta --dry-run",
    "release:latest": "node scripts/publish.js --latest",
    "release:latest:dry": "node scripts/publish.js --latest --dry-run",
    "release:github": "node scripts/release-gh.js",
    "release:github:dry": "node scripts/release-gh.js --dry-run",
    "release:complete": "npm run release:latest && npm run release:github",
    "release:complete:dry": "npm run release:latest:dry && npm run release:github:dry",
    "format": "prettier --write --ignore-path .gitignore **/*.{js,ts,jsx,tsx,html,css} '!test/**' && npm run format:doc",
    "format:doc": "prettier --write --ignore-path .prettierignore *.{json,md} packages/**/*.{json,md}",
    "lint": "eslint src/**/*.{js,ts,jsx,tsx}",
    "lint:fix": "eslint src/**/*.{js,ts,jsx,tsx} --fix",
    "lint:pkgs": "npx eslint packages/** --no-ignore --rule {no-var:off,no-redeclare:off,prefer-const:off,eqeqeq:off,import/order:off,no-setter-return:off,no-sparse-arrays:off,no-cond-assign:off}",
    "lint:texts": "node scripts/lint-texts.js"
  },
  "devDependencies": {
    "@angular/common": ">=12.0.0",
    "@angular/compiler": "^20.2.3",
    "@angular/compiler-cli": "^20.2.3",
    "@angular/core": ">=12.0.0",
    "@nuxt/kit": ">=3.0.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "browserslist-config-baseline": "^0.5.0",
    "chokidar": "^4.0.3",
    "dotenv-cli": "^10.0.0",
    "esbuild": "^0.25.9",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-compat": "^6.0.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-sonarjs": "^3.0.5",
    "globals": "^16.3.0",
    "langdetect": "^0.2.1",
    "lit": ">=2.0.0",
    "ng-packagr": "^20.2.0",
    "nuxt": ">=3.0.0",
    "prettier": "^3.6.2",
    "react": ">=16.8.0",
    "solid-js": ">=1.0.0",
    "svelte": ">=3.0.0",
    "typescript": "^5.0.0",
    "vue": ">=3.0.0"
  },
  "keywords": [
    "javascript",
    "animation",
    "css-animations",
    "web-animation",
    "scroll-animations",
    "intersection-observer",
    "scroll-lib"
  ],
  "browserslist": "extends browserslist-config-baseline"
}
