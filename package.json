{
  "name": "usal-monorepo",
  "version": "1.0.0-beta.4",
  "private": true,
  "type": "module",
  "description": "Ultimate Scroll Animation Library - 8KB of pure JavaScript magic",
  "homepage": "https://italoalmeida0.github.io/usal",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/italoalmeida0/usal.git"
  },
  "bugs": {
    "url": "https://github.com/italoalmeida0/usal/issues"
  },
  "author": "Italo Almeida",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "packages": {
    "react": {
      "dependencies": {
        "react": [
          ">=16.8.0",
          false
        ]
      },
      "jsx": true
    },
    "solid": {
      "dependencies": {
        "solid-js": [
          ">=1.0.0",
          false
        ]
      }
    },
    "svelte": {
      "dependencies": {
        "svelte": [
          ">=3.0.0",
          false
        ]
      },
      "usage": "use:usal={'VALUES'}"
    },
    "vue": {
      "dependencies": {
        "vue": [
          ">=3.0.0",
          false
        ]
      },
      "usage": "v-usal=\"'VALUES'\""
    },
    "lit": {
      "dependencies": {
        "lit": [
          ">=2.0.0",
          false
        ]
      }
    },
    "angular": {
      "dependencies": {
        "@angular/core": [
          ">=12.0.0",
          false
        ],
        "@angular/common": [
          ">=12.0.0",
          false
        ]
      },
      "usage": "[usal]=\"'VALUES'\""
    }
  },
  "scripts": {
    "dev": "npm run build -- --watch",
    "build": "npm run lint:fix && node scripts/build.js && npm run format:doc",
    "version:all": "npm version --workspaces",
    "update:tags": "node scripts/update-tags.js",
    "publish:pkgs-beta": "npm run build && npm publish --workspaces --tag beta --access public",
    "publish:all-beta": "npm run publish:pkgs-beta && npm run update:tags",
    "format": "prettier --write --ignore-path .gitignore **/*.{js,ts,jsx,tsx,html,css} && npm run format:doc",
    "format:doc": "prettier --write --ignore-path .prettierignore *.{json,md} packages/**/*.{json,md}",
    "lint": "eslint src/**/*.{js,ts,jsx,tsx}",
    "lint:fix": "eslint src/**/*.{js,ts,jsx,tsx} --fix",
    "lint:comments": "node scripts/lint-comments.js"
  },
  "devDependencies": {
    "@angular/common": ">=12.0.0",
    "@angular/core": ">=12.0.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "esbuild": "^0.25.9",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^16.3.0",
    "lit": ">=2.0.0",
    "prettier": "^3.6.2",
    "react": ">=16.8.0",
    "solid-js": ">=1.0.0",
    "svelte": ">=3.0.0",
    "typescript": "^5.0.0",
    "vue": ">=3.0.0"
  },
  "keywords": [
    "javascript",
    "animation",
    "css-animations",
    "web-animation",
    "scroll-animations",
    "intersection-observer",
    "scroll-lib"
  ],
  "dependencies": {
    "franc": "^6.2.0",
    "langdetect": "^0.2.1"
  }
}
